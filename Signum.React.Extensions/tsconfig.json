{
  "compilerOptions": {
    "target": "ES2017",
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "incremental": true,
    "outDir": "./ts_out",
    "composite": true,
    //"noEmit": true,
    "strict": true,
    "declarationMap": true,
    "paths": {
      "@framework/*": [ "../Signum.React/Scripts/*" ],
      "*": [
        "../Signum.React/node_modules/@types/*",
        "../Signum.React/node_modules/*",
        "./*"
      ]
    },
    "lib": [
      "ES2020",
      "dom"
    ]
  },
  "exclude": [
    "../Signum.React/ts_out",
    "../Signum.React/node_modules",
    "./node_modules",
    "./ts_out"
  ],
  "references": [
    { "path": "../Signum.React" }
  ]
}
