<CodeSnippet Format="1.1.0" xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <Header>
    <Title>SearchControl</Title>
    <Author>Signum Software</Author>
    <Shortcut>sc</Shortcut>
    <Description>Code snippet for adding an React SearchControl with IsNew check and header</Description>
    <SnippetTypes>
      <SnippetType>Expansion</SnippetType>
    </SnippetTypes>
  </Header>
  <Snippet>
    <Imports>
      <Import>
        <Namespace>
          import { SearchControl } from '@framework/Search'
        </Namespace>
      </Import>
    </Imports>
    <Declarations>
      <Literal>
        <ID>entityType</ID>
        <ToolTip>Name of the main entity</ToolTip>
        <Default>FooEntity</Default>
      </Literal>
    </Declarations>
    <Code Language="TypeScript">
      <![CDATA[<SearchControl findOptions={{ queryName: $entityType$, filterOptions: [{ token: $entityType$.token(a => a.$end$), value: ctx.value}]} />]]>
    </Code>
  </Snippet>
</CodeSnippet>
